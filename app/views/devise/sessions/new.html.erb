<h2>Log in</h2>

<div class="row">
  <div class="col-sm-6">
    <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), remote: true) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true %>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Log in",
          class: "btn btn-primary",
          data: { disable_with: "Logging in.."}
        %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-link pull-right" %>
        <% end %>
      </div>
  </div>

  <br>

  <div class="col-sm-6">
      <%= link_to image_tag("google_signin", :alt => "Sign in with Google", style: "height: 50px"), user_google_oauth2_omniauth_authorize_path, class: "btn center-block" %>

      <hr style="border-top: 1px solid #8c8b8b;">

      <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-success center-block", style: "width: 200px" %>
  </div>
</div>
