<div data-controller="button-bar" data-event-id="<%= @event.id %>" data-latitude="<%= @event.latitude %>" data-longitude="<%= @event.longitude %>">
  <div role="toolbar" class="btn-toolbar">
    <div class="btn-group">
      <%= render :partial => "home/voting_buttons" %>

<!--       <button class="btn btn-default">💙</button> -->

      <% if @event.performances.count > 1 %>
        <button class="btn btn-default" type="button" data-action="button-bar#performances">🗓️</button>
      <% end %>

      <button class="btn btn-default" type="button" data-action="button-bar#map" style="color: rgb(223, 31, 31);"><i class="glyphicon glyphicon-map-marker"></i></button>
      <!-- <button class="btn btn-default" type="button">💬</button> -->
    </div>

  <div data-controller="list" data-target="list.content">
    <%= render :partial => "home/list_buttons" %>
  </div>

  </div>

  <div class="well well-sm collapse" id="well-content-box" aria-expanded="true" style="" data-target="button-bar.contentBox">
  </div>
</div>
