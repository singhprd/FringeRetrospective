<div class="row">
  <div class="col-xs-2 col-sm-2">
      <%= image_tag(@event.image_urls.first, {style: "width: 100%"}) %>
  </div>

  <div class="col-xs-6 col-sm-6">
    <div class="row">
      <dl class="dl-horizontal">
        <dt>Venue:</dt>
        <dd><%= @event.venue.name %></dd>

        <dt>Artist:</dt>
        <dd><%= @event.artist %></dd>

        <dt>Website:</dt>
        <dd> <%= link_to "Official Festival Listing", @event.website %> </dd>

        <dt>Festival:</dt>
        <dd> <%= @event.festival %> </dd>
      </dl>
    </div>
  </div>
</div>
